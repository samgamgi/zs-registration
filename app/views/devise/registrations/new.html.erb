<%= render 'pages/header'%>
<div class="container">
<div class="jumbotron-center">
	<div class="panel panel-default">
	  <div class="panel-heading">
	  	<div class="panel-title">
	    <h1>Sign up</h1>
	  </div>
	  </div>

	  <div class="panel-body">
	    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	      <%= devise_error_messages! %>

	      <div class="form-group form-group-lg">
	        <%= f.label :name %>
	        <%= f.text_field :name, autofocus: true, class: "form-control input-md" %>
	      </div>

	      <div class="form-group form-group-lg">
	        <%= f.label :email %>
	        <%= f.email_field :email, autofocus: true, class: "form-control input-md" %>
	      </div>

	      <div class="form-group form-goup-lg">
	        <%= f.label :password %>
	        <%= f.password_field :password, class: "form-control input-md" %>
	      </div>

	      <div class="form-group form-goup-lg">
	        <%= f.label :phone %>
	        <%= f.text_field :phone, type: "tel", class: "form-control input-md" %>
	      </div>

	      <div class="form-group">
	        <%= f.submit "Sign up", class: "btn btn-primary" %>
	      </div>
	    <% end %>
	  </div>

	  <div class="panel-footer">
	    <%= render "devise/shared/links" %>
	  </div>
	</div>
</div>
</div>