<%= render 'pages/header'%>
<% flash.each do |name, msg| %>
		<%= content_tag(:div, msg, class: "alert alert-info") %>
		<% end %>

<% if user_signed_in? %>
      <div class="container">
        <div class="jumbotron center">
       <% if current_user.inventories.blank? %>
       <%= link_to 'Create an Order', new_inventory_path %>
       <% else %>
       <%= link_to 'View Your Inventory', inventories_path %>
      <% end %>
      </div>
      </div>
  <% else %>  
    <div class="container">
    <div class="jumbotron center">
         <h1>Welcome to Zip-Services!</h1>
         
         <p>
           <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
           <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
      	</p>    
      	
    </div>
    </div>
<% end %>